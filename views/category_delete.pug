extends layout

block content

  h1 #{title}: #{category.name}


  if cars.length

    p #[strong Delete the following cars before attempting to delete this category.]
    div(style='margin-left:20px;margin-top:20px')
      h4 Cars
      dl
        each car in cars
          dt
            a(href=car.url) #{car.year} #{car.make} #{car.model}
          

  else
    p Do you really want to delete this Category?

    form(method='POST')
      div.form-group
        input#authorid.form-control(type='hidden', name='categoryid', value=category._id )

      button.btn.btn-primary(type='submit') Delete
